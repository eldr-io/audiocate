<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkBox" id="encFileTopBox">
    <property name="halign">3</property>
    <property name="spacing">35</property>
    <child>
      <object class="AdwClamp" id="encFileTopClamp">
        <property name="maximum-size">600</property>
        <property name="margin-top">15</property>
        <property name="tightening-threshold">200</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">1</property>
            <property name="halign">3</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkBox">
                <property name="spacing">6</property>
                <property name="halign">3</property>
                <property name="orientation">1</property>
                <property name="margin-bottom">45</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="true">Load file to process</property>
                    <style>
                      <class name="title-4"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="true">Use the form below to select a .WAV file to work with</property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="margin-top">12</property>
                    <property name="margin-bottom">10</property>
                    <property name="homogeneous">true</property>
                    <property name="spacing">18</property>
                    <child>
                      <object class="AdwSplitButton">
                        <property name="label" translatable="true">Select File</property>
                        <property name="popover">button_popover</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="true">sample1-test.wav</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <child>
                      <object class="AdwButtonContent">
                        <property name="label" translatable="true">Load file</property>
                        <property name="icon-name">sound-wave-symbolic</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkLinkButton">
                    <property name="label">WAVE File Reference</property>
                    <property name="uri">https://gnome.pages.gitlab.gnome.org/libadwaita/doc/1.4/class.ButtonContent.html</property>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="spacing">6</property>
                    <property name="orientation">1</property>
                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="true">File properties</property>
                        <style>
                          <class name="title-4"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel">
                        <property name="label" translatable="true">The audio properties of the loaded file</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkListBox">
                        <property name="margin-top">10</property>
                        <property name="selection-mode">0</property>
                        <style>
                          <class name="boxed-list"/>
                        </style>
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="true">Source</property>
                            <child type="suffix">
                              <object class="GtkLabel">
                                <property name="label" translatable="true">sample1-test.wav</property>
                                <property name="name">encFilePropSrcLbl</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="true">Rate</property>
                            <property name="subtitle" translatable="true">Frequency</property>
                            <child type="suffix">
                              <object class="GtkLabel">
                                <property name="label" translatable="true">44.1 kHz</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="true">Bit-rate</property>
                            <property name="subtitle" translatable="true"></property>
                            <child type="suffix">
                              <object class="GtkLabel">
                                <property name="label" translatable="true">16-bit</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="true">Samples</property>
                            <property name="subtitle" translatable="true">Number of samples</property>
                            <child type="suffix">
                              <object class="GtkLabel">
                                <property name="label" translatable="true">1092512</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="true">Frames</property>
                            <property name="subtitle" translatable="true">Number of frames</property>
                            <child type="suffix">
                              <object class="GtkLabel">
                                <property name="label" translatable="true">128</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwActionRow">
                            <property name="title" translatable="true">Channels</property>
                            <property name="subtitle" translatable="true">Audio channels in file</property>
                            <child type="suffix">
                              <object class="GtkLabel">
                                <property name="label" translatable="true">1 (Mono)</property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
  <object class="GtkPopover" id="button_popover">
    <child>
      <object class="GtkBox">
        <property name="orientation">1</property>
        <child>
          <object class="GtkSearchEntry">
            <property name="placeholder-text" translatable="true">Search documents</property>
          </object>
        </child>
        <child>
          <object class="AdwStatusPage">
            <property name="title" translatable="true">No Recent Documents</property>
            <property name="icon-name">clock-symbolic</property>
            <property name="width-request">300</property>
            <property name="height-request">300</property>
            <style>
              <class name="compact"/>
              <class name="dim-label"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
